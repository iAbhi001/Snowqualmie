---
// src/components/ContactPortal.astro
import { Mail, Send, ShieldCheck, Terminal } from 'lucide-react';
---

<section class="relative z-10 w-full py-20 px-[6vw]">
  <div class="max-w-[1000px] mx-auto">
    <div class="flex items-center gap-4 mb-8">
      <Terminal size={18} class="text-blue-400 animate-pulse" />
      <span class="text-[11px] font-mono font-black text-blue-400 uppercase tracking-[0.5em]">Secure_Handshake_Protocol</span>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-[1fr_1.5fr] gap-12 p-8 md:p-16 rounded-[3rem] bg-white/[0.03] backdrop-blur-[40px] border border-white/10 shadow-2xl">
      
      <div class="space-y-8">
        <h3 class="text-5xl font-black italic text-white uppercase tracking-tighter leading-none">
          Contact <br/> <span class="text-blue-500">Node</span>
        </h3>
        <div class="space-y-4">
           <div class="flex items-center gap-4 p-4 rounded-2xl bg-white/5 border border-white/5">
              <Mail class="text-blue-400" size={20} />
              <span class="text-xs font-mono text-white/60 tracking-widest">mmulpuri@purdue.edu</span>
           </div>
           <div class="flex items-center gap-4 p-4 rounded-2xl bg-blue-500/10 border border-blue-500/20">
              <ShieldCheck class="text-blue-400" size={20} />
              <span class="text-[9px] font-mono text-blue-400 uppercase font-black">Encrypted Channel Active</span>
           </div>
        </div>
      </div>

      <form class="space-y-4">
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <input 
            type="text" 
            placeholder="Identity_Name" 
            class="w-full bg-white/5 border border-white/10 rounded-2xl px-6 py-4 text-white font-mono text-xs focus:border-blue-500 outline-none transition-all"
          />
          <input 
            type="email" 
            placeholder="Contact_Email" 
            class="w-full bg-white/5 border border-white/10 rounded-2xl px-6 py-4 text-white font-mono text-xs focus:border-blue-500 outline-none transition-all"
          />
        </div>
        <textarea 
          rows="4" 
          placeholder="Transmission_Message..." 
          class="w-full bg-white/5 border border-white/10 rounded-2xl px-6 py-4 text-white font-mono text-xs focus:border-blue-500 outline-none transition-all"
        ></textarea>
        <button class="w-full group relative flex items-center justify-center gap-4 bg-white/10 hover:bg-blue-600 border border-white/10 hover:border-blue-500 py-5 rounded-2xl transition-all duration-500">
           <span class="font-black uppercase tracking-[0.3em] text-white text-[10px]">Initiate Uplink</span>
           <Send size={16} class="text-blue-400 group-hover:text-white group-hover:translate-x-1 group-hover:-translate-y-1 transition-all" />
        </button>
      </form>
    </div>
  </div>
</section>