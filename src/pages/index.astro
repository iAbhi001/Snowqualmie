---
import Layout from '../layouts/Layout.astro';
import EarthCanvas from '../components/EarthCanvas.tsx';
import LeetCodeCard from '../components/LeetCodeCard.tsx';
import ProjectGrid from '../components/ProjectGrid.tsx';
---

<Layout title="Abhiram | Portfolio">
  <div class="fixed inset-0 z-0">
    <EarthCanvas client:only="react" />
  </div>

  <main class="relative z-10 w-full overflow-y-visible">
    
    <section id="home" class="h-screen w-full flex items-center justify-end px-24">
      <div class="text-right animate-fade-in">
        <h1 class="text-9xl md:text-[12rem] font-black tracking-tighter text-white drop-shadow-2xl leading-[0.8] uppercase">
          ABHI<br/>
          <span class="text-blue-500 italic">ram</span>
        </h1>
        <p class="text-gray-500 tracking-[0.6em] text-xs mt-8 uppercase font-light">
          Purdue University Fort Wayne
        </p>
        <p class="text-blue-400/40 tracking-[0.4em] text-[10px] mt-2 uppercase font-mono italic">
          M.S.
        </p>
      </div>
    </section>

    <section id="leetcode" class="min-h-screen w-full flex items-center justify-center px-8 bg-black/40 backdrop-blur-sm py-20">
      <div class="max-w-6xl w-full">
        <h2 class="text-blue-500 font-mono tracking-[0.6em] text-center text-xs uppercase mb-12">
          Technical Prowess
        </h2>
        <LeetCodeCard client:load /> 
      </div>
    </section>

    <section id="builds" class="min-h-screen w-full py-32 px-8 bg-transparent">
      <div class="max-w-6xl mx-auto">
        <div class="flex flex-col md:flex-row justify-between items-end mb-20 gap-8">
          <div class="max-w-xl">
            <h3 class="font-mono text-blue-500 uppercase tracking-widest mb-4">Open Source Contributions</h3>
            <p class="text-white/40 text-sm font-medium leading-relaxed">
              Real-time extraction of repository metadata via GitHub REST API. 
              Focusing on high-performance financial tools and algorithmic solutions.
            </p>
          </div>
          <h2 class="text-7xl lg:text-8xl font-black italic uppercase tracking-tighter text-white">
            Key <span class="text-blue-500">Builds</span>
          </h2>
        </div>
        
        <ProjectGrid client:load />
      </div>
    </section>

  </main>
</Layout>

<style>
  /* Global page resets to handle scrolling and background */
  :global(body) {
    overflow-y: auto !important;
    height: auto !important;
    background-color: #030303;
    margin: 0;
  }

  html {
    scroll-behavior: smooth;
  }

  .animate-fade-in {
    animation: fadeIn 2s ease-out forwards;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateX(50px); }
    to { opacity: 1; transform: translateX(0); }
  }
</style>