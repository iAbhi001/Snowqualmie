---
import Layout from '../layouts/Layout.astro'; // Or whatever your main layout is
import SearchableMarketTracker from '../components/SearchableMarketTracker';
---

<Layout title="Market Trends">
  <main class="min-h-screen bg-[#050505] py-20 px-4">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-white text-6xl font-black uppercase italic mb-12 text-center">
        Market <span class="text-blue-500">Trends</span>
      </h1>
      
      <SearchableMarketTracker client:only="react" />
    </div>
  </main>
</Layout>