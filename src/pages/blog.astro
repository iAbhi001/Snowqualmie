---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import EarthCanvas from '../components/EarthCanvas.tsx';
import { Calendar, Clock, ArrowRight, BookOpen } from 'lucide-react';

export const prerender = true;

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Blogs | Technical Logs">
  <div class="fixed inset-0 z-0 bg-[#000000] overflow-hidden">
    <div id="stars" class="absolute inset-0"></div>
    <div id="stars2" class="absolute inset-0"></div>
    <div id="stars3" class="absolute inset-0"></div>
    <EarthCanvas client:only="react" />
    <div class="absolute inset-0 z-20 bg-gradient-to-b from-black/20 to-black"></div>
  </div>

  <Navbar />

  <main class="relative z-10 min-h-screen pt-32 pb-20 px-[5vw] font-inter">
    <div class="max-w-6xl mx-auto">
      <header class="mb-20">
        <h1 class="text-6xl font-black tracking-tighter uppercase text-white leading-none mb-4">
          Tech <span class="text-blue-500 italic">Logs</span>
        </h1>
        <p class="text-white/30 text-[10px] font-bold uppercase tracking-[0.4em] flex items-center gap-2">
           <BookOpen size={14} /> Knowledge Base Established
        </p>
      </header>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {posts.map((post) => (
          <a href={`/blog/${post.slug}`} class="group">
            <div class="p-8 rounded-[2.5rem] border border-white/5 bg-white/[0.02] backdrop-blur-3xl hover:border-blue-500/30 transition-all duration-500 h-full flex flex-col justify-between">
              <div>
                <div class="flex items-center gap-4 mb-6">
                  <div class="flex items-center gap-1.5 text-blue-500/60 text-[10px] font-bold uppercase tracking-widest">
                    <Calendar size={12} /> {post.data.pubDate.toLocaleDateString()}
                  </div>
                  <div class="h-1 w-1 rounded-full bg-white/10"></div>
                  <div class="text-white/20 text-[10px] font-bold uppercase tracking-widest">
                    {post.data.tags[0]}
                  </div>
                </div>
                <h2 class="text-2xl font-bold text-white mb-4 group-hover:text-blue-400 transition-colors leading-tight">
                  {post.data.title}
                </h2>
                <p class="text-white/40 text-sm leading-relaxed mb-8">
                  {post.data.description}
                </p>
              </div>
              <div class="flex items-center gap-2 text-blue-500 font-bold text-xs uppercase tracking-widest group-hover:gap-4 transition-all">
                Read Transmission <ArrowRight size={14} />
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </main>
</Layout>

<style is:global>
  #stars, #stars2, #stars3 { position: absolute; inset: 0; background: transparent; pointer-events: none; }
  #stars { width: 1px; height: 1px; box-shadow: 1452px 1451px #FFF, 246px 1452px #FFF; animation: animStar 50s linear infinite; }
  @keyframes animStar { from { transform: translateY(0px); } to { transform: translateY(-2000px); } }
</style>